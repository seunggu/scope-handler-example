{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "lib": ["es2015", "es2016"],
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./lib"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.js",
    "**/*.sepc.ts"
  ]
}